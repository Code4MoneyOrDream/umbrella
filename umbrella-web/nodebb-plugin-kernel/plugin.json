{
	"id": "nodebb-plugin-kernel",
	"name": "kernel Plugin for NodeBB",
	"description": "A nodebb-plugin-kernel plugin for NodeBB which allows users to post topics to be evaluated by kernel",
	"library": "./library.js",
	"hooks": [
		{ 
			"hook": "static:app.load", "method": "init"
		},
		{ 
			"hook": "action:topic.post", "method": "topic.post"
		},
		{
			"hook": "filter:topics.get", "method": "getTopics"
		}
	],
	"scripts": [
		"static/lib/main.js"
	],
	"staticDirs": {
		"static": "./static"
	},
	"less": [
		"static/style.less"
	],
	"templates": "templates"
}